<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <EnableDefaultItems>false</EnableDefaultItems>
	  <DefineSilverlight>true</DefineSilverlight>
    <LangVersion>Preview</LangVersion>
    <RootNamespace>DemoProject</RootNamespace>
    <IsSLMigration>True</IsSLMigration>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenSilver.Compiler" />
  </ItemGroup>

  <ItemGroup>
	  <ApplicationDefinition Include="App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </ApplicationDefinition>
    <Page Include="MainPage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="App.xaml.cs" />
    <Compile Include="MainPage.xaml.cs" />
    <Compile Include="ViewModels\TestViewModel.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\OpenSilver\src\Runtime\Runtime\Runtime.OpenSilver.csproj" />
  </ItemGroup>
  
</Project>
