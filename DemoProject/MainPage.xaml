<UserControl x:Class="DemoProject.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DemoProject"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel x:Name="LayoutRoot" Background="White">
        <TextBlock Text="RadioButtons"/>
        <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <CheckBox Name="visibleCheckbox" Content="RadioButtons visible"/>
        <ItemsControl ItemsSource="{Binding Items}" Visibility="{Binding ElementName=visibleCheckbox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton Checked="RadioButton_Checked"
                                 Content="{Binding Name}"
                                 GroupName="group"
                                 IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                 Unchecked="RadioButton_Checked"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Margin="0,50,0,0" Text="TextBoxes"/>
        <TextBox x:Name="text"/>
        <CheckBox Name="textVisibleCheckbox" Content="TextBox visible"/>
        <TextBox IsReadOnly="True"
                 Text="{Binding ElementName=text, Path=Text}"
                 TextChanged="TextBox_TextChanged"
                 Visibility="{Binding ElementName=textVisibleCheckbox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!--ItemsControl works the same way as in Silverlight-->
        <!--<TextBlock Margin="0,50,0,0" Text="ItemsSource"/>
        <TextBox x:Name="textItems"/>
        <CheckBox Name="itemsVisibleCheckbox" Content="Items visible"/>
        <ItemsControl Name="itemsControl"
                      ItemsSource="{Binding ElementName=textItems, Path=Text}"
                      Visibility="{Binding ElementName=itemsVisibleCheckbox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>-->

        <!--ContentPresenter works the same way as in Silverlight-->
        <!--<TextBlock Margin="0,50,0,0" Text="ContentControl"/>
        <Button x:Name="contentButton" Content="bb" Click="contentButton_Click"/>
        <CheckBox Name="contentVisibleCheckbox" Content="ContentControl visible"/>
        <ContentPresenter Name="contentControl" Content="{Binding ElementName=contentButton, Path=Content}" Visibility="{Binding ElementName=contentVisibleCheckbox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>-->
    </StackPanel>
</UserControl>
