<UserControl x:Class="DemoProject.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <StackPanel>
        <TextBox Text="{Binding Test.FirstName, Mode=TwoWay, NotifyOnValidationError=True}"/>
        <TextBox Text="{Binding Test.LastName, Mode=TwoWay, NotifyOnValidationError=True}"/>
        <Button Content="Raise errors" Click="Button_Click"/>
        <sdk:ValidationSummary/>
    </StackPanel>
</UserControl>
