<UserControl x:Class="DemoProject.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DemoProject"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             Name="this"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:TestConverter x:Key="TestConverter"/>
        <DataTemplate x:Key="MyTemplate">
            <TextBlock Text="Test" Visibility="{Binding DataContext.CurrentMode, ElementName=this, Mode=TwoWay, Converter={StaticResource TestConverter}}"/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <sdk:TabControl>
            <sdk:TabItem Header="0">
                <TextBlock Text="Hello"/>
            </sdk:TabItem>
            <sdk:TabItem Header="1">
                <ContentPresenter ContentTemplate="{StaticResource MyTemplate}"/>
            </sdk:TabItem>
        </sdk:TabControl>
    </Grid>
</UserControl>
