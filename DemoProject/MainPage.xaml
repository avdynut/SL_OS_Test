<UserControl x:Class="DemoProject.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.Resources>
            <HierarchicalDataTemplate x:Key="ItemTemplate5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Level 6"/>
                    <TextBlock Text="{Binding Number}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="ItemTemplate4"
                                      ItemTemplate="{StaticResource ItemTemplate5}"
                                      ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Level 5"/>
                    <TextBlock Text="{Binding Number}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="ItemTemplate3"
                                      ItemTemplate="{StaticResource ItemTemplate4}"
                                      ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Level 4"/>
                    <TextBlock Text="{Binding Number}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="ItemTemplate2"
                                      ItemTemplate="{StaticResource ItemTemplate3}"
                                      ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Level 3"/>
                    <TextBlock Text="{Binding Number}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="ItemTemplate1"
                                      ItemTemplate="{StaticResource ItemTemplate2}"
                                      ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Level 2"/>
                    <TextBlock Text="{Binding Number}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="ItemTemplate"
                                      ItemTemplate="{StaticResource ItemTemplate1}"
                                      ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Level 1"/>
                    <TextBlock Text="{Binding Number}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </Grid.Resources>
        <TabControl>
            <TabItem Header="Start screen"/>
            <TabItem Header="TreeView">
                <TreeView ItemTemplate="{StaticResource ItemTemplate}" ItemsSource="{Binding Items}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
