<UserControl x:Class="DemoProject.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             xmlns:tooltip="clr-namespace:Silverlight.Controls.ToolTips;assembly=Silverlight.Controls.ToolTips"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <StackPanel x:Name="LayoutRoot" Background="White">
        <TextBlock Text="Hello!"/>
        <Button Content="Sdk Tooltip" ToolTipService.ToolTip="Text"/>
        <Button Content="Library Tooltip" tooltip:ToolTipService.ToolTip="Text"/>
        <Button Content="Click">
            <tooltip:ToolTipService.ToolTip>
                <tooltip:ToolTip DisplayTime="Forever" InitialDelay="0">
                    <TextBlock Text="This field will" TextWrapping="Wrap"/>
                </tooltip:ToolTip>
            </tooltip:ToolTipService.ToolTip>
        </Button>
    </StackPanel>
</UserControl>
