<UserControl x:Class="DemoProject.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             d:DesignHeight="300"
             d:DesignWidth="400"
             FontSize="20"
             mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.Resources>
            <Style TargetType="sdk:TreeViewItem">
                <Setter Property="IsExpanded" Value="True"/>
            </Style>
            <sdk:HierarchicalDataTemplate x:Key="ItemTemplate5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Id}"/>
                </StackPanel>
            </sdk:HierarchicalDataTemplate>
            <sdk:HierarchicalDataTemplate x:Key="ItemTemplate4"
                                          ItemTemplate="{StaticResource ItemTemplate5}"
                                          ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Id}"/>
                </StackPanel>
            </sdk:HierarchicalDataTemplate>
            <sdk:HierarchicalDataTemplate x:Key="ItemTemplate3"
                                          ItemTemplate="{StaticResource ItemTemplate4}"
                                          ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Id}"/>
                </StackPanel>
            </sdk:HierarchicalDataTemplate>
            <sdk:HierarchicalDataTemplate x:Key="ItemTemplate2"
                                          ItemTemplate="{StaticResource ItemTemplate3}"
                                          ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Id}"/>
                </StackPanel>
            </sdk:HierarchicalDataTemplate>
            <sdk:HierarchicalDataTemplate x:Key="ItemTemplate1"
                                          ItemTemplate="{StaticResource ItemTemplate2}"
                                          ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Id}"/>
                </StackPanel>
            </sdk:HierarchicalDataTemplate>
            <sdk:HierarchicalDataTemplate x:Key="ItemTemplate"
                                          ItemTemplate="{StaticResource ItemTemplate1}"
                                          ItemsSource="{Binding ChildItems}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Id}"/>
                </StackPanel>
            </sdk:HierarchicalDataTemplate>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <sdk:TabControl>
            <sdk:TabItem Header="Start screen"/>
            <sdk:TabItem Header="TreeView" IsSelected="True">
                <sdk:TreeView ItemTemplate="{StaticResource ItemTemplate}" ItemsSource="{Binding ServiceLineList}" Name="treeView"/>
            </sdk:TabItem>
        </sdk:TabControl>
        <CheckBox Grid.Row="1"
                  HorizontalAlignment="Center"
                  Click="Button_Click"
                  Content="IncludeAllChildren"/>
        <Button Grid.Row="2"
                HorizontalAlignment="Center"
                Click="Button_Click_2"
                Content="RaisePropertyChanged"/>
        <Button Grid.Row="3"
                HorizontalAlignment="Center"
                Click="Button_Click_1"
                Content="Number of calls"/>
    </Grid>
</UserControl>
