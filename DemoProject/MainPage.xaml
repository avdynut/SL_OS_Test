<UserControl x:Class="DemoProject.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             xmlns:tooltip="clr-namespace:Silverlight.Controls.ToolTips;assembly=Silverlight.Controls.ToolTips"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <TabControl>
        <TabItem Header="1">
            <StackPanel x:Name="LayoutRoot" Background="White">
                <Button Content="Sdk Tooltip" ToolTipService.ToolTip="ToolTip Message"/>
                <Button tooltip:ToolTipService.ToolTip="ToolTip Message" Content="Library Tooltip"/>
                <Button Content="Click">
                    <tooltip:ToolTipService.ToolTip>
                        <tooltip:ToolTip DisplayTime="Forever" InitialDelay="0">
                            <TextBlock Text="ToolTip Message" TextWrapping="Wrap"/>
                        </tooltip:ToolTip>
                    </tooltip:ToolTipService.ToolTip>
                </Button>
            </StackPanel>
        </TabItem>
        <TabItem Header="2">
            <TextBlock Text="Hello!"/>
        </TabItem>
    </TabControl>
</UserControl>
