<Application x:Class="DemoProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="HatchStyleForwardDiagonal" MappingMode="Absolute" Opacity="1.0" SpreadMethod="Repeat" StartPoint="0.000000,10.000000" EndPoint="10.000000,0.000000">
            <GradientStop Offset="0" Color="#ffcccccc"/>
            <GradientStop Offset="0.3" Color="#ffffffff"/>
            <GradientStop Offset="0.5" Color="#ffcccccc"/>
            <GradientStop Offset="0.8" Color="#ffffffff"/>
            <GradientStop Offset="1" Color="#ffcccccc"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
